<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1><%= title %></h1>
        <nav>
            <div class="nav-primary">
                <a href="/">Home</a>
                <a href="/new">New Message</a>
            </div>
        </nav>
    </header>
    <main>
        <div class="message-detail">
            <div class="message-header">
                <h2>Message from <strong><%= message.user %></strong></h2>
                <span class="timestamp">Posted on <%= message.added.toLocaleString() %></span>
            </div>
            <div class="message-content">
                <p><%= message.text %></p>
            </div>
            <div class="message-actions">
                <button class="delete-btn" onclick="deleteMessage('<%= message.id %>')">Delete Message</button>
            </div>
        </div>
    </main>
    <script>
        function deleteMessage(messageId) {
            if (confirm('Are you sure you want to delete this message?')) {
                fetch(`/message/${messageId}/delete`, {
                    method: 'POST'
                }).then(() => {
                    window.location.href = '/';
                });
            }
        }
    </script>
</body>
</html>
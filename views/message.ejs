<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <h1><%= title %></h1>
        <nav>
            <div class="nav-primary">
                <a href="/">Home</a>
                <a href="/new">New Message</a>
            </div>
        </nav>
    </header>
    <main>
        <div class="message-detail">
            <div class="message-header">
                <h2>Message from <strong><%= message.user %></strong></h2>
                <span class="timestamp">Posted on <%= new Date(message.added).toLocaleString() %></span>
            </div>
            <div class="message-content">
                <p><%= message.text %></p>
            </div>
            <div class="message-actions">
                <button class="delete-btn" onclick="deleteMessage('<%= messageId %>')">Delete Message</button>
            </div>
        </div>
    </main>
    <script>
        function deleteMessage(index) {
            if (confirm('Are you sure you want to delete this message?')) {
                fetch(`/message/${index}/delete`, {
                    method: 'POST'
                })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '/';
                    } else {
                        alert('Failed to delete message.');
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert('An error occurred while deleting the message.');
                });
            }
        }
    </script>
</body>
</html>